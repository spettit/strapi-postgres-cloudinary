{
  "kind": "collectionType",
  "collectionName": "trips",
  "info": {
    "name": "Trip",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "start_date": {
      "type": "date"
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "participants": {
      "collection": "participant",
      "via": "trips"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Walking",
        "Running",
        "Cycling",
        "Motorcycling",
        "Sailing",
        "Skiing"
      ]
    },
    "region": {
      "type": "string"
    },
    "distance_km": {
      "type": "integer"
    },
    "duration_days": {
      "type": "integer"
    },
    "sub_title": {
      "type": "string"
    },
    "Legs": {
      "type": "component",
      "repeatable": true,
      "component": "leg-component.leg-component"
    },
    "flag_coords": {
      "type": "json"
    },
    "end_date": {
      "type": "date"
    }
  }
}
